#setting strings and functions
next=4
_black () {
	tput setaf 0
}
_red () {
	tput setaf 1
}
_green() {
	tput setaf 2
}
_yellow() {
	tput setaf 3
}
_blue() {
	tput setaf 4
}
_magenta() {
	tput setaf 5
}
_cyan() {
	tput setaf 6
}
_white() {
	tput setaf 7
}
_bold() {
	tput bold
}
_tset() {
	tput sgr 0
}
nscript="$(_green)\'sgminer$next.in\'$(_blue)"
_rebooty () {
	_green
	printf '%*s\n' "${COLUMNS:-$(tput cols)}" '' | tr ' ' =
	echo "You need to reboot before continuing. Reboot and then run $nscript.
	Reboot now? [y/N]: " reboot
		case $reboot in
			y|Y)
				echo "Rebooting now."
				sudo reboot
				;;
			*)
				echo "Reboot before running $nscript."
				;;
		esac
	_tset
}
_echecho () {
	_blue
	printf '%*s\n' "${COLUMNS:-$(tput cols)}" '' | tr ' ' =
	echo -e "$1..."
	_tset
}
_darkcoinascii () {
	echo -e "\e[0;34m$1"
	sleep 0.1
}

##starting script
#darkcoin ascii
{
	_darkcoinascii '    \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\'
	_darkcoinascii '      \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\'
	_darkcoinascii '        \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\'
	_darkcoinascii '          \\\\\\\\\\\\\\\\\\\\\\\\\\                                  \\\\\\\\\\\\\\\\'
	_darkcoinascii '\\\\\\\\\\\\\\\\\\   \\\\\\\\\\\\\\\\\\\\\\                                  \\\\\\\\\\\\\\\\'
	_darkcoinascii '  \\\\\\\\\\\\\\\\\\   \\\\\\\\\\\\\\\\\\                                  \\\\\\\\\\\\\\\\'
	_darkcoinascii '    \\\\\\\\\\\\\\\\\\   \\\\\\\\\\\\\\                                  \\\\\\\\\\\\\\\\'
	_darkcoinascii '      \\\\\\\\\\\\\\\\\\   \\\\\\\\\\                                  \\\\\\\\\\\\\\\\'
	_darkcoinascii '        \\\\\\\\\\\\\\\\\\   \\\\\\                                  \\\\\\\\\\\\\\\\'
	_darkcoinascii '          \\\\\\\\\\\\\\\\\\   \\                                  \\\\\\\\\\\\\\\\'
	_darkcoinascii '            \\\\\\\\\\\\\\\\\\                                    \\\\\\\\\\\\\\\\'
	_darkcoinascii '              \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\'
	_darkcoinascii '                \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\'
	_darkcoinascii '                  \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\'
}
{
	_echecho "Installing AMD APP SDK version 2.9"
	cd /tmp
	curl -o amd-app-sdk.tgz http://blog.truepps.com/downloads/AMD/AMD-APP-SDK-v2.9-lnx64.tgz
	sudo mkdir amd-app-sdk
	sudo mv amd-app-sdk.tgz amd-app-sdk
	cd amd-app-sdk
	sudo tar -zxvf amd-app-sdk.tgz
	sudo tar -zxvf AMD-APP-SDK-v2.9-RC-lnx64.tgz
	cd AMD-APP-SDK-v2.9-RC-lnx64
	sudo cp -pv lib/x86_64/* /usr/lib/
	sudo rsync -avl include/CL/ /usr/include/CL/
	cd ..
	sudo tar -zxvf icd-registration.tgz
	sudo rsync -avl etc/OpenCL/ /etc/OpenCL/
	sudo ldconfig
	sudo perl default-install_lnx_64.pl 2>&1 | tee -a ~/sgminer3-opencl.log
	sudo aticonfig --adapter=all --initial
}
_rebooty